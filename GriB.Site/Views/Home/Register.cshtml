@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
    ViewData["Title"] = "Register";
}

<div class="img-cover" id="divImgBg" style="background-image:url('/img/bg/bg1.jpg');">
    <div class="img-cover" id="divImgBg" style="background-image:none;background-color:rgba(0,0,0,0.5);">
        <div class="vertical-center">
            <div class="row">
                <div class="col s12 m8 l8 xl6 offset-m2 offset-l2 offset-xl3">
                    <div class="row">
                        <div class="col s12">
                            <h5 class="white-text">Зарегистрируйтесь, чтобы начать использовать POS Cloud</h5>
                        </div>

                        <div class="input-field col s12">
                            <i class="material-icons prefix white-text">account_box</i>
                            <input id="register_name" type="text" class="validate">
                            <label for="register_name">Имя</label>
                        </div>
                        <div class="input-field col s12">
                            <i class="material-icons prefix white-text">phone</i>
                            <input id="register_phone" type="tel" class="validate">
                            <label for="register_phone">Телефон</label>
                        </div>
                        <div class="input-field col s12">
                            <i class="material-icons prefix white-text">email</i>
                            <input id="register_email" type="email" class="validate">
                            <label for="register_email">E-mail</label>
                        </div>

                        <div class="col s12">
                            <a id="register_send" class="waves-effect waves-parralax1 btn-flat btncol btn-parralax1">ОТПРАВИТЬ</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 white-text">
                            Нажимая кнопку «ОТПРАВИТЬ», вы даете согласие<br>на <a href="~/Home/PrivacyPersonal">обработку своих персональных данных</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/register.js"></script>
}

